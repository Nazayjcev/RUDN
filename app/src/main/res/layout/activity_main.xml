<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maxresdefault"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/hello_label"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="470dp"
        android:layout_marginBottom="178dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#22020000"
        android:clickable="false"
        android:gravity="center"
        android:text="Добро пожаловать! Нажмите на кнопку."
        android:textSize="25sp" />

    <Button
        android:id="@+id/date_button"
        android:layout_width="320dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="415dp"
        android:backgroundTint="#92100303"
        android:gravity="center"
        android:onClick="showDate"
        android:text="Нажмите сюда, чтобы увидеть дату"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/back"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="567dp"
        android:layout_marginBottom="121dp">

        <TextView
            android:id="@+id/textview_post"
            android:layout_width="380dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Домашнее задание. Зайцев Никита"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>